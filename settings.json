{
    // Extensions:
    // # Custom:
    //     code --install-extension holyblackcat.cats-cpp  # Source code: git clone https://github.com/HolyBlackCat/vscode-cats-cpp
    //     git clone https://github.com/HolyBlackCat/vscode-better-tab
    //     git clone https://github.com/HolyBlackCat/vscode-macros-fixed
    //     code --install-extension vscode-better-tab/*.vsix
    //     code --install-extension vscode-macros-fixed/*.vsix
    // # Store:
    //     code --install-extension bierner.markdown-preview-github-styles
    //     code --install-extension eamodio.gitlens
    //     code --install-extension llvm-vs-code-extensions.vscode-clangd
    //     code --install-extension mhutchie.git-graph
    //     code --install-extension pkief.material-icon-theme
    //     code --install-extension sanaajani.taskrunnercode
    //     code --install-extension yo1dog.cursor-align
    //     code --install-extension zokugun.explicit-folding
    // # Optional debugging extensions: (prefer lldb-dap)
    //     code --install-extension vadimcn.vscode-lldb
    //     code --install-extension webfreak.debug
    //
    // # Building LLDB-DAP:
    //   * Clone https://github.com/llvm/llvm-project
    //   * Checkout the latest stable branch; you can list the branches using: git tag | grep -P '^llvmorg-.*(?<!init)$' | sort -t- -n -k2
    //   * sudo pacman -S node npm
    //   * npm install
    //   * Probably not needed: sudo npm install -g vsce
    //   * npm run package
    //   * If already installed, uninstall old version and purge the directory from `~/.vscode/extensions`.
    //   * Install into VSC: npm run vscode-install

    "telemetry.telemetryLevel": "off",

    "[c][cpp]": {
        "editor.autoIndent": "advanced",
    },

    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Clean C++ Light",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": false,
    "workbench.list.horizontalScrolling": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",

    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.accessibilitySupport": "off",
    "editor.autoSurround": "quotes",
    "editor.bracketPairColorization.enabled": false,
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.foldingHighlight": false,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.lineHeight": 18,
    "editor.links": false,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.multiCursorPaste": "full",
    "editor.parameterHints.cycle": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.semanticHighlighting.enabled": false,
    "editor.showFoldingControls": "always",
    "editor.showUnused": false,
    "editor.snippetSuggestions": "none",
    "editor.stickyScroll.enabled": true,
    "editor.suggest.showKeywords": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.trimAutoWhitespace": false,
    "editor.unfoldOnClickAfterEndOfLine": true,

    "window.autoDetectHighContrast": false,
    "window.commandCenter": false,
    "window.customMenuBarAltFocus": false,
    "window.experimentalControlOverlay": false,
    "window.menuBarVisibility": "visible",
    "window.restoreWindows": "none",
    "window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${profileName}${separator}${appName}",
    "window.titleBarStyle": "custom",

    "debug.allowBreakpointsEverywhere": true,
    "debug.console.fontFamily": "Consolas, 'Courier New', monospace",
    "debug.console.fontSize": 16,
    "debug.console.lineHeight": 18,
    "debug.onTaskErrors": "abort",
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "docked",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.scrollback": 50000,
    // "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
    // "terminal.integrated.shell.windows": "Z:\\Lander\\msys2\\usr\\bin\\bash.exe",
    // "terminal.integrated.shellArgs.windows": ["--login", "-i"],
    // "terminal.integrated.env.windows": {
    //     "MSYSTEM": "MINGW64",
    //     "MSYS2_PATH_TYPE": "inherit",
    //     "CHERE_INVOKING": "yes",
    // },

    "security.workspace.trust.enabled": false,

    "files.associations": {
        "*.json": "jsonc",
        "*.h": "cpp"
    },
    "files.autoSave": "off",
    "files.exclude": {
        ".cache/": true,
    },
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.readonlyInclude": {
        "/usr/**": true
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "git.allowForcePush": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.showUnpublishedCommitsButton": "never",

    // "git.path": "Z:\\Lander\\InstalledPrograms\\Git\\bin\\git.exe",
    "git.enableStatusBarSync": false,
    "git.mergeEditor": true,
    "git.openRepositoryInParentFolders": "never",
    "git.pruneOnFetch": true,
    "git.showActionButton": {
        "commit": false,
        "publish": false,
        "sync": false
    },
    "git.terminalAuthentication": false,
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.repository.fetchAndPruneTags": true,
    "git-graph.showStatusBarItem": false,
    "github.gitAuthentication": false,
    "gitlens.advanced.similarityThreshold": 90,
    "gitlens.ai.enabled": false,
    "gitlens.ai.experimental.generateCommitMessage.enabled": false,
    "gitlens.blame.format": "${author|25?}:  ${message|40?} ${agoOrDate|14-}",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.defaultGravatarsStyle": "monsterid",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.keymap": "none",
    "gitlens.launchpad.indicator.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.compare.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.views.scm.grouped.views": {
        "commits": false,
        "branches": false,
        "remotes": false,
        "stashes": false,
        "tags": false,
        "worktrees": false,
        "contributors": false,
        "repositories": false,
        "searchAndCompare": false,
        "launchpad": false
    },
    "gitlens.menus": {
        "scmRepositoryInline": { "graph": false },
        "editor": false,
        "editorGroup": {
            "blame": true,
            "compare": true
        },
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },

    "scm.diffDecorationsGutterPattern":{
        "added": false,
        "modified": false,
    },

    "task.autoDetect": "off",

    "search.exclude": {
        "**/bower_components": false,
        "**/node_modules": false
    },

    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "explorer.incrementalNaming": "simple",
    // "explorer.fileNesting.enabled": true,
    // "explorer.fileNesting.patterns": {
    //     "*.h": "${capture}.c, ${capture}.cpp, ${capture}.cc, ${capture}.inl",
    //     "*.hpp": "${capture}.cpp, ${capture}.cc, ${capture}.inl",
    // },

    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,

    "breadcrumbs.enabled": false,

    "diffEditor.ignoreTrimWhitespace": false,

    // "C_Cpp.autoAddFileAssociations": false,
    // "C_Cpp.autocomplete": "Disabled",
    // "C_Cpp.configurationWarnings": "Disabled",
    // "C_Cpp.dimInactiveRegions": false,
    // "C_Cpp.errorSquiggles": "Disabled",
    // "C_Cpp.formatting": "Disabled",
    // "C_Cpp.intelliSenseEngine": "disabled",

    "macros": {
        "close_param_hints_end": ["closeParameterHints", "cursorEnd"],
        "close_suggestions_end": ["hideSuggestWidget", "cursorEnd"],

        "delete_brackets": ["editor.action.selectToBracket", "deleteLeft"],
        "make_member_initializer": ["editor.action.addSelectionToNextFindMatch", {"command": "editor.action.insertSnippet", "args": {"snippet": "$TM_SELECTED_TEXT($TM_SELECTED_TEXT)"}}],
        "make_member_initializer_move": ["editor.action.addSelectionToNextFindMatch", {"command": "editor.action.insertSnippet", "args": {"snippet": "$TM_SELECTED_TEXT(std::move($TM_SELECTED_TEXT))"}}],
    },

    "extensions.ignoreRecommendations": true,

    "markdown.validate.enabled": true,

    "clangd.path": "clangd",
    "clangd.arguments": [
        "--header-insertion=never",
        "--clang-tidy",
        "--function-arg-placeholders=false"
    ],
    "clangd.inactiveRegions.opacity": 0.7,
    "clangd.onConfigChanged": "restart",
    "clangd.fallbackFlags": [
        "-std=c++26",
        "-pedantic-errors",
        "-Wall",
        "-Wextra",
        "-Wdeprecated",
        "-Wextra-semi",
    ],

    "lldb-dap.executable-path": "/home/holyblackcat/.clang/21.1.4/bin/lldb-dap",

    "lldb.consoleMode": "evaluate",
    "lldb.dereferencePointers": true,
    "lldb.displayFormat": "auto",
    "lldb.launch.expressions": "native",
    "lldb.showDisassembly": "auto",

    "chat.commandCenter.enabled": false,

