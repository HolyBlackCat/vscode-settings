{
    // Font:
    // https://github.com/HolyBlackCat/monokat-fonts
    //
    // Extensions:
    // https://github.com/HolyBlackCat/vscode-better-tab
    // C/C++
    // https://github.com/HolyBlackCat/vscode-cats-cpp
    // CMake
    // Cursor Align
    // Fold Plus
    // Git Graph
    // GitLens
    // https://github.com/HolyBlackCat/vscode-macros-fixed
    // Markdown Preview Github Style
    // Material Icon Theme
    // Overtype
    // Surround
    // Task Runner
    // vscode-clangd

    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Cat's Light",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.horizontalScrolling": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",

    "editor.accessibilitySupport": "off",
    "editor.autoSurround": "quotes",
    "editor.detectIndentation": false,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "'Monokat 6x12', Consolas, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.lineHeight": 12,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.parameterHints.cycle": true,
    "editor.renderControlCharacters": true,
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "none",
    "editor.suggest.filteredTypes": {"keyword": false},
    "editor.suggestSelection": "first",
    "editor.trimAutoWhitespace": false,

    "window.autoDetectHighContrast": false,
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "visible",
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",

    "debug.allowBreakpointsEverywhere": true,
    "debug.console.fontFamily": "'Monokat 6x12', Consolas, 'Courier New', monospace",
    "debug.console.fontSize": 12,
    "debug.console.lineHeight": 12,
    "debug.inlineValues": true,
    "debug.openExplorerOnEnd": true,
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "docked",

    "terminal.integrated.enableBell": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.scrollback": 3000,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontWeightBold": "normal",

    "files.associations": {
        "*.json": "jsonc",
        "*.h": "cpp"
    },
    "files.autoSave": "off",
    "files.exclude": {
        "obj/": true
    },
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "git.path": "Z:\\Lander\\InstalledPrograms\\Git\\bin\\git.exe",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.allowForcePush": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.advanced.similarityThreshold": 90,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.keymap": "none",
    "gitlens.defaultGravatarsStyle": "monsterid",
    "git-graph.showStatusBarItem": false,

    "grunt.autoDetect": "off",
    "gulp.autoDetect": "off",
    "jake.autoDetect": "off",

    "search.exclude": {
        "**/bower_components": false,
        "**/node_modules": false
    },

    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",

    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,

    "breadcrumbs.enabled": false,

    "diffEditor.ignoreTrimWhitespace": false,

    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.configurationWarnings": "Disabled",
    "C_Cpp.dimInactiveRegions": false,
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.clang_format_path": "Z:/Lander/msys2/mingw64/bin/clang-format.exe",

    "surround.custom": {
        "parens": {
            "label": "()",
            "description": "()",
            "snippet": "($TM_SELECTED_TEXT)",
        },
        "braces": {
            "label": "{}",
            "description": "{}",
            "snippet": "{$TM_SELECTED_TEXT}",
        },
        "brackets": {
            "label": "[]",
            "description": "[]",
            "snippet": "[$TM_SELECTED_TEXT]",
        },
        "parens_lf": {
            "label": "(lf)",
            "description": "(lf)",
            "snippet": "(\n$TM_SELECTED_TEXT\n)",
        },
        "braces_lf": {
            "label": "{lf}",
            "description": "{lf}",
            "snippet": "{\n$TM_SELECTED_TEXT\n}",
        },
        "brackets_lf": {
            "label": "[lf]",
            "description": "[lf]",
            "snippet": "[\n$TM_SELECTED_TEXT\n]",
        },
    },

    "macros": {
        "surround_with_parens_l": ["surround.with.parens", "cursorLeft", "editor.action.jumpToBracket"],
        "surround_with_parens_r": ["surround.with.parens"],
        "surround_with_braces_l": ["surround.with.braces", "cursorLeft", "editor.action.jumpToBracket"],
        "surround_with_braces_r": ["surround.with.braces"],
        "surround_with_brackets_l": ["surround.with.brackets", "cursorLeft", "editor.action.jumpToBracket"],
        "surround_with_brackets_r": ["surround.with.brackets"],
        "surround_with_paren_block_l": ["surround.with.parens_lf", "cursorLeft", "editor.action.selectToBracket", "betterTab.indent", "cursorRight", "cursorLeft", "outdent", "editor.action.jumpToBracket", "outdent"],
        "surround_with_paren_block_r": ["macros.surround_with_paren_block_l", "editor.action.jumpToBracket", "cursorRight"],
        "surround_with_brace_block_l": ["surround.with.braces_lf", "cursorLeft", "editor.action.selectToBracket", "betterTab.indent", "cursorRight", "cursorLeft", "outdent", "editor.action.jumpToBracket", "outdent"],
        "surround_with_brace_block_r": ["macros.surround_with_brace_block_l", "editor.action.jumpToBracket", "cursorRight"],
        "surround_with_bracket_block_l": ["surround.with.brackets_lf", "cursorLeft", "editor.action.selectToBracket", "betterTab.indent", "cursorRight", "cursorLeft", "outdent", "editor.action.jumpToBracket", "outdent"],
        "surround_with_bracket_block_r": ["macros.surround_with_bracket_block_l", "editor.action.jumpToBracket", "cursorRight"],

        "close_param_hints_end" : ["closeParameterHints", "cursorEnd"],
        "close_suggestions_end" : ["hideSuggestWidget", "cursorEnd"],

        "delete_brackets" : ["editor.action.selectToBracket", "deleteLeft"],
    },
}
